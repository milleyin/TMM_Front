.item-banner {
  position: relative;
  width: 100%;
  padding-top: 66.6%;
  overflow: hidden;
  img {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
  }
}

.item-detail {
  background-color: #fff;
  .item-row {
    display: flex;
    align-items: center;
    margin-left: 14px;
    line-height: 44px;
    @extend %border-bottom;
    &:last-of-type {
      background-image: none;
    }
    .tit {
      width: 70px;
      color: $darkGray;
    }
    .txt {
      color: $gray;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      flex: 1;
    }
    .chakan {
      width: 44px;
      margin-right: 14px;
      margin-left: 5px;
      font-size: 13px;
      line-height: 13px;
      padding: 4px 0px;
      text-align: center;
      border: 1px solid #ff595f;
      border-radius: 2px;
      color: #ff595f;
    }
  }
  .fare-block {
    width: 100px;
    flex: 1;
  }
  .block-row {
    display: flex;
    justify-content: space-between;
    padding-right: 14px;
    @extend %border-bottom;
     &:last-of-type {
      background-image: none;
    }



    .txt {
      flex: inherit;
      &:nth-of-type(1) {
        flex: 1.5
      }
      &:nth-of-type(2) {
        text-align: center;
        flex: 1.0
      }
      &:nth-of-type(3) {
        text-align: center;
        flex: 1.0
      }
      &:last-of-type {
        text-align: right;
        flex: 1.2
      }
    }

  }
  .fare-servie {
    width: 100px;
    flex: 1; 
    padding: 5px 0;
  }
  .hotel-servie {
    display: inline-block;
    line-height: 20px;
    padding: 5px 8px;
    border-radius: 2px;
    border: 1px solid #d7d9d7;
    margin: 5px;
    color: $gray;
  }
}

.edit-content {
  background-color: #fff;
  padding: 14px;
  margin-top: 10px;
  img {
    width: 100% !important;
    height: auto !important;
  }
}

.map-popover {
  position: absolute;
  top: 44px;
  left: 50%;
  width: 90%;
  height: 80%;
  margin-left: -45%;
  opacity: 1;
  overflow: hidden;
  .map-tit {
    width: 100%;
    font-size: 14px;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items:center;
  }
  .popover-arrow {
    display: none;
  }
  .scroll-view.scroll-xy {
    border-top: 43px solid transparent;
    width: 100%;
    height: 100%;

  }
}
.popover-backdrop.active {
  background-color: rgba(0, 0, 0, 0.8);
}
