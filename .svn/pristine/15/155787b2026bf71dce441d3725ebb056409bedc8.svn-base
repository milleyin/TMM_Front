@charset "UTF-8";
.tmm-recommend-list {
  padding-bottom: 50px;
}
.tmm-recommend-item {
  .pic {
    img {
      width: 100%;
      height: auto;
      display: block;
    }
  }
  .txt {
    padding: 13px 16px 13px;
    position: relative;
    .title {
      font-size: 17px;
      line-height: 17px;
      color: #000000;
    }
    .info {
      font-size: 12px;
      line-height: 13px;
      color: #666666;
      margin-top: 14px;
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis;
    }
    .praise {
      position: absolute;
      bottom: 29px;
      right: 16px;
      vertical-align: bottom;
    }
    .praise-distance {
      font-size: 10px;
      color: #666;
    }
    .type {
      position: absolute;
      top: -8px;
      right: 1pc;
      font-size: 12px;
      line-height: 20px;
      color: #fff;
      border-radius: 2px;
      width: 40px;
      height: 20px;
      text-align: center;
    }
    .type.dot {
      background-color: #13b0cc;
    }
    .type.line {
      background-color: #39ab53;
    }
    .type.act {
      background-color: #43aff4;
    }
  }
}
