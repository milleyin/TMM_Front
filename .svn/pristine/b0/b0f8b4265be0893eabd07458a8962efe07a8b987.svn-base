@charset "UTF-8";
.card, .card2 {
  position: relative;
  box-sizing: border-box;
  width: 300px;
  margin: 0 auto;
  background-image: url("../images/card.png");
  background-size: 100% 100%;
  padding: 20px 12px 5px 12px;
  .tit {
    margin-bottom: 10px;
    font-size: 18px;
    line-height: 18px;
  }
  .give-ticket {
    position: absolute;
    width: 27px;
    height: 27px;
    border-radius: 50%;
    line-height: 27px;
    font-size: 14px;
    text-align: center;
    color: #fff;
    background-color: #36a0ea;
    margin-left: 5px;
    margin-top: -5px;
  }
  .txt,
  .date {
    font-size: 10px;
    line-height: 10px;
  }
  .txt {
    margin-bottom: 15px;
  }
  .date {
    color: #666;
  }
  .img {
    position: absolute;
    right: 20px;
    top: 15px;
    width: 45px;
    height: 68px;
  }
  .footer {
    margin-top: 10px;
    line-height: 40px;
    font-size: 12px;
    text-align: right;
    @include hairline();
  }
  .num {
    position: absolute;
    min-width: 10px;
    height: 20px;
    line-height: 20px;
    padding: 0 5px;
    font-size: 15px;
    border-radius: 50%;
    background-color: #9fdd8c;
    color: #fff;
    text-align: center;
    top: -6px;
    right: -8px;
  }
  .status {
    margin-top: 15px;
    .flag {
      display: inline-block;
      font-size: 12px;
      color: #fff;
      line-height: 17px;
      background-color: #ea5336;
      padding: 0 10px;
      border-radius: 17px;
      margin-right: 15px;
    }

    .flag-dark {
      background-color: #000;
    }

    .flag-gray {
      background-color: #a3a8a4;
    }
  }
}

.card2 {
  background-image: none;
  background-color: #fff;
  border-radius: 5px;
  box-shadow: 0 1px 4px rgba(0,0,0,0.3);

  .img {
    position: absolute;
    right: 12px;
    top: 15px;
    width: 85px;
    height: 55px;
  }
}
.payInfo {
  background-color: #edf2ee;
  padding-bottom: 20px;
  .card {
    margin-top: 20px;
  }
  .noCard {
    margin-top: 20px;
    text-align: center;
    font-size: 18px;
  }
}

.success {
  padding-bottom: 64px;
  background-color: #edf2ee;
  .title {
    margin-top: 43px;
    margin-bottom: 20px;
    font-size: 20px;
    text-align: center;
  }
  .give {
    margin-top: 70px;
    margin-bottom: 20px;
    font-size: 20px;
    text-align: center;
  }

  .give-intro {
    display: block;
    width: 300px;
    margin: 10px auto 30px;
    font-size: 12px;
    color: #999;
  }
  .give-card {
    display: flex;
    width: 298px;
    height: 80px;
    background-color: #fff;
    margin: 0 auto;
    box-shadow: 0 0 2px rgba(0, 0, 0, 0.2);
    .left {
      flex: 1;
      display: flex;
      position: relative;
      align-items: center;
      background: url("../images/dotline.png") repeat-y right;
      background-size: 1px 4px;
      padding-left: 12px;
      .price {
        color: #ea5336;
        span {
          font-size: 30px;
        }
      }
      .intro {
        margin-left: 12px;
        line-height: 1.2em;
        .tit {
          font-size: 14px;
        }
        .txt {
          font-size: 10px;
          color: #999;
        }
      }
      .coupons {
        position: absolute;
        bottom: 7px;
        right: 10px;
        font-size: 10px;
        color: #ea5336;
      }
    }
    .right {
      overflow: hidden;
      width: 76px;
      height: 100%;
      background-color: #ea5336;
      color: #fff;
      text-align: center;
      a {
        display: inline-block;
        margin-top: 20px;
        font-size: 16px;
        line-height: 18px;
      }
    }
  }
}

.footer-wrap {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 44px;
  background-color: rgba(221,221,221,0.8);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 15px;
  .footer-item {
    display: block;
    width: 90px;
    height: 30px;
    font-size: 15px;
    line-height: 30px;
    text-align: center;
    background-color: #fff;
    border-radius: 5px;

  }
}