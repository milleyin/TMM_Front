.navs { padding-left: 0; list-style: none; }
.navs:after { clear: both; }

.subnav { display: -webkit-box; display: -webkit-flex; display: -moz-box; display: -moz-flex; display: -ms-flexbox; display: flex; line-height: 40px; }
.subnav:before { content: ''; position: absolute; height: 1px; width: 100%; background-color: #d7d9d7; display: block; -webkit-transform-origin: 50% 0%; transform-origin: 50% 0%; -webkit-transform: scaleY(0.5); transform: scaleY(0.5); }

.nav-item { -webkit-box-flex: 1; -webkit-flex: 1; -moz-box-flex: 1; -moz-flex: 1; -ms-flex: 1; flex: 1; text-align: center; color: #565a5c; font-size: 13px; }

.nav-item .tmm-subnav-btn { display: inline-block; line-height: 38px; padding: 0 5px; }
.nav-item .tmm-subnav-btn.hover { border-bottom: 2px solid #ff595f; }

.modal-mask { position: fixed; top: 0; left: 0; right: 0; bottom: 0; z-index: 100; background-color: rgba(0, 0, 0, 0.8); text-align: center; }
.modal-mask .modal { display: inline-block; width: 60%; vertical-align: middle; background-color: #fff; border-radius: 4px; }
.modal-mask .modal .tit { border-bottom: 1px solid #d7d9d7; line-height: 20px; padding: 12px 5px; font-size: 15px; font-weight: normal; color: #403a39; }
.modal-mask .modal .confirm { line-height: 44px; display: -webkit-box; display: -webkit-flex; display: -moz-box; display: -moz-flex; display: -ms-flexbox; display: flex; }
.modal-mask .modal .confirm span { display: inline-block; -webkit-box-flex: 1; -webkit-flex: 1; -moz-box-flex: 1; -moz-flex: 1; -ms-flex: 1; flex: 1; }
.modal-mask .modal .confirm span:last-child { border-left: 1px solid #d7d9d7; }
.modal-mask i { height: 100%; display: inline-block; vertical-align: middle; }
