.media-cell {
  
  margin: 14px;
  background-color: #fff;

  @extend %border-wrap;
  .media {
    width: 75px;
    height: 60px;

    img {
      width: 100%;
      height: 100%;
    }
  }

  .describe {
    margin-left: 10px;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .tit {
    font-size: 14px;
    line-height: 14px;
    color: $darkGray;
   
  }

  .txt {
    font-size: 12px;
    line-height: 12px;
    color: $gray;
    &:last-of-type {
      margin-bottom: 0;
    }
  }

  .stress {
    color: $red;
  }

  .cell-body {
    padding: 10px;
    display: flex;

  }
}