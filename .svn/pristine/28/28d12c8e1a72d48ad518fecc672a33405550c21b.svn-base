body {
  font-family: Helvetica, "华文细黑";
    background-color: #f0f1f2;
}

i {
  display: inline-block;
}

em {
  display: block;
}
a {text-transform:none; text-decoration:none;} 
a:hover {text-decoration:none;} 

.tmm-bar {
  background-color: transparent !important;
}
.scroll-content {
  background-color: #f0f1f2;
}
.arrow-down {
  height: 16px;
  width: 16px;
  background-image: url(data:image/png;base64,);
  background-size: 16px 16px;
}

.ionic-refresher-content {
  text-align: center;
}

.icon-pulling {

}

.scroll-refresher .ionic-refresher-content .text-pulling {
  font-size: 12px;
  line-height: 32px;
}

.tmm-ion-left.icon.icon-arrow-back {
  font-size: 20px;
  line-height: 34px;
  margin-left: 10px;
}

.tmm-ionic-alert {
  .popup {
    border-radius: 10px;
  }
  .popup-buttons {
    @extend %border-top;
    min-height: 45px;
    padding: 0;
    .button {
      color: #387ef5;
      background-color: transparent;
      font-size: 17px;
      font-weight: 600;
    }
  }
}