@import url('_vars.less');
@import url('_mixin.less');
.tmm-logo-list-block {
    .item-media img {
        width: 58px;
        height: 58px;
    }
    .item-after {
        .icon {
            font-size: 14px;
            color: @c-line;
        }
    }
    .item-inner {
        .font-line(15px;
        58px);
        .item-title {
            margin-left: 20px;
        }
    }
    .login-out {
        color: @c-title;
        font-size: 14px;
    }
}

.tmm-icon-login {
    .item-media .icon {
        color: @c-red;
    }
    .item-title {
        color: @c-red !important;
    }
}

.tmm-my-item-info {
    .item-content {
        min-height: 48px;
    }

    .item-title {
        font-size: 15px;
        color: @c-title;
    }
    .item-after {
        .icon {
            font-size: 14px;
            color: @c-line;
        }
    }
}

.tmm-icon-blue {
    .item-media {
        .icon {
            color: @c-blue;
        }
    }
}

.tmm-icon-red {
    .item-media {
        .icon {
            color: @c-red;
        }
    }
}


/***************************************************************************/


/**
 * login
 */

.tmm-login-page {
    background: #3f3936;
    .close {
        display: block;
        position: absolute;
        top: 16px;
        right: 16px;
        .icon {
            color: @c-line;
            font-size: 20px;
        }
    }
}

.tmm-login-page .tmm-login {
    position: fixed;
    left: 0px;
    bottom: 0px;
    background-color: #c8a063;
    width: 100%;
    height: 48px;
    text-align: center;
    line-height: 48px;
}

.tmm-login-page .tmm-login a {
    position: relative;
    display: block;
    float: left;
    width: 50%;
    color: #111;
    font-size: 15px;
    border-radius: 0;
}

.tmm-login-page .tmm-login a.tmm-acc-login:after {
    content: '';
    display: block;
    position: absolute;
    width: 1px;
    height: 26px;
    top: 11px;
    right: 0px;
    background-color: #403a39;
}

.tmm-login-page .tmm-bg-img {
    width: 100%;
    height: 100%;
    background: #3f3936 url(../images/logo1.png) no-repeat 0 center;
    background-size: 100%;
}


/**
 * acc-login
 */

.tmm-acc-login-page {
    background: #3f3936;
    .tmm-acc-icon {
        margin: 10px 0 0 0;
        .icon {
            font-size: 20px;
            color: #d7d9d7;
        }
    }
    .list-block {
        ul {
            border-radius: 4px;
        }
        .item-content {
            margin: 0 16px;
            padding-left: 0px;
        }
        margin: 18px 0;
        &.inset {
            margin-left: 15px;
            margin-right: 15px;
        }
    }
    .tmm-showMsg-li {
        display: none;
        .tmm-showMsg {
            color: @c-red;
        }
    }
    .item-input {
        input {
            font-size: 14px;
        }
        
        .tmm-verifycode-img {
            width: 107px;
            height: 30px;
            position: absolute;
            right: 0;
            top: 7px;
        }
        .get-code {
            text-align: center;
            background-color: @c-red;
            .font-line(14px;30px);
            color: #fff;
            .tmm-verifycode-img;
        }
        
    }
    .tmm-disable-login {
        margin-top: 20px;
        text-align: center;
        a {
            color: #ffffff;
        }
    }

    .tmm-login-submit {
        background-color: @c-red;
        border-radius: 4px;
        border:none;
        color: #fff;
    }
}
