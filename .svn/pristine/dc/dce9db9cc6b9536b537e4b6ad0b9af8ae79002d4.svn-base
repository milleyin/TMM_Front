<ion-view view-title="手机号快捷登录" hide-nav-bar="true" cache-view="false" hide-tabs>
  <ion-content scroll="false" class="tmm-acc-login-page">
    <div class="tmm-acc-login-wrap">
      <div class="list list-inset ">
        <label class="item item-input">
          <input type="text" placeholder="请输入手机号" ng-model="loginModel.phone">
        </label>
        <div class="item item-input-inset">
          <label class="item-input-wrapper ">
            <input type="text" placeholder="请输入图形验证码" ng-model="loginModel.verifycode">
          </label>
          <img class="tmm-verifycode-img" src="{{mobLoginData.verifyCodeUrl}}" ng-click="showVerifyCode()">
        </div>
        
        <div class="item item-input-inset">
          <label class="item-input-wrapper ">
            <input type="text" placeholder="请输入短信验证码" ng-model="loginModel.msgcode">
          </label>
          <button class="tmm-login-code" ng-disabled="canSend()" ng-click="getMsgCode()">{{mobLoginData.codeText}}</button>
        </div>
      </div>
      <div class="list list-inset tmm-list-button">
        <button class="button button-block tmm-acc-login-button" ng-click="mobLogin()">
          登录
        </button>
      </div>
      <a href="javascript:;" class="tmm-login-back" ui-sref="tab.login" nav-direction="back">
        <i class="icon ticon-arrow-back"></i>
      </a>
    </div>
  </ion-content>
</ion-view>
