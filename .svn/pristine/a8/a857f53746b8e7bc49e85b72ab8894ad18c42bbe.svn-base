.qrcode {
  .codeImg {
    display: block;
    width: 128px;
    height: 128px;
    margin: 0px auto 20px;
  }
  .finger {
    margin: 20px auto 70px;
    height: 30px;
    text-align: center;
    img {
      width: 25px;
      height: 30px;
    }
    span {
      color: #000;
      font-size: 15px;
      line-height: 30px;
      height: 30px;
      vertical-align: top;
    }
  }
  .title {
    font-size: 18px;
    text-align: center;
    margin: 50px 0 80px 0;
    color: #723d3d;
    font-weight: bolder;
  }
  .txt {
    font-size: 13px;
    line-height: 18px;
    padding: 0 40px;

  }


}
